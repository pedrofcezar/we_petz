<div class="wrapper">
  <h1> WePetz Blog <span style="margin: 15px;"><i class="fas fa-paw"></i></span></h1>
    <div class="container title">
        <%= @article.title %>
    </div>
  <div class="container author"><%= @article.author %></div>
    <div style="height: 25px"></div>
    <div class="container keys">
        <p> Este artigo refere-se a...</p>
       <span>
            <% if @article.dog_key %>
            <i class="fas fa-dog"></i>
            <% else %> <span></span>
            <% end %>
            <% if @article.cat_key %><i class="fas fa-cat"></i>
            <% else %> <span></span>
            <% end %>
            <% if @article.product_key %><i class="fas fa-box-open"></i>
            <% else %> <span></span>
            <% end %>
            <% if @article.pet_key %><i class="fas fa-paw"></i>
            <% else %> <span></span>
            <% end %>
       </span>
    </div>
    <div style="height: 25px"></div>
    <div class="container content">
        <%= @article.content %>
    </div>
    <%= link_to "Apagar", article_path(@article), method: :delete %>
    <div style="height: 25px"></div>
    <%= link_to "Editar", edit_article_path(@article)  %>
     <div style="height: 25px"></div>
    <%= link_to "Voltar", articles_path  %>
</div>
