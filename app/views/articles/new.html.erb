<div class="wrapper">
    <div class="container">
        <h1> WePetz Blog <span style="margin: 15px;"><i class="fas fa-paw"></i></span></h1>
        <p> Escreva seu artigo abaixo </p>
    </div>
    <div class="container form">
        <%= simple_form_for [@article] do |f| %>
        <%= f.input :author %>
        <%= f.input :email %>
        <%= f.input :title %>
        <%= f.input :content %>
        <%= f.input :dog_key %>
        <%= f.input :cat_key %>
        <%= f.input :product_key %>
        <%= f.input :pet_key %>
        <%= f.input :photo %>
        <%= f.submit "Cadastrar Artigo", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
